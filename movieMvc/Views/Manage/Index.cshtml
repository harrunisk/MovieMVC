                                            <div class="clearfix"></div>
                                        </div>
                                        <div>

                                            @Html.ActionLink("Remove", "DeleteUserArtist", new { ArtistID = item.ArtistID })

                                        </div>
                                    </div>

                                </div>
                            </div>
                            <td></td>
                        }
                    </div>
                </div>
            </div>
        </div>
